<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_overview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_wallet_list"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:name="com.example.carteirasimples.WalletListFragment"/>

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_overview"
        android:layout_toStartOf="@id/fragment_wallet_list"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:name="com.example.carteirasimples.WalletOverviewFragment"/>
</RelativeLayout>
